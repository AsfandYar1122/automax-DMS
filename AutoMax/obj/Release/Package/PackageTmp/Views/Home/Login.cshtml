@model AutoMax.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<style type="text/css">
    .requiredField {
        color: red;
    }
</style>
<div class="row">
    <div class="col-md-3 col-lg-3">
        <div class="v-center-parent" style="height: 100vh; width: 100%;">
            <div class="v-center-child" style="width: 100%;">
                <form action="@Url.Content("~/Home/Login")" method="post">
                    <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
                    <div class="text-center">
                        <a href="@Url.Content("~/Home/Login")"><img class="img-responsive m-auto-center" src="~/assets/images/logo.png"></a>
                        <h2 class="header-primary m-top-30 m-bottom-30">SIGN IN</h2>
                    </div>
                    @Html.ValidationSummary(false, "", new { @class = "requiredField" })
                    <div class="form-group custom-group" style="padding:0 24px;">
                        <label for="username">Email <span class="requiredField">*</span></label>
                        <input type="email" class="form-control custom-control" id="username" placeholder="Enter enter your email address" name="Email" style="background-color: #f9fafb; box-shadow: none;border:0.5px solid #C2C2C2;">
                    </div>
                    <div class="form-group custom-group" style="margin-top: 24px; padding: 0 24px;">
                        <label for="password">Password <span class="requiredField ">*</span></label>
                        <input type="password" class="form-control custom-control" id="password" name="Password" placeholder="Enter Password" style="background-color: #f9fafb;box-shadow: none;border:0.5px solid #C2C2C2;">
                    </div>
                    <div class="checkbox " style="padding:0 24px;">
                        <label><input type="checkbox" name="" value="false" id="RememberMe">Remember my account</label>
                        <input type="hidden" name="RememberMe" id="hdnRememberMe" />
                    </div>
                    <div style="padding:0 24px;">
                        <button type="submit" class="btn btn-block btn-custom" style="margin-top: 24px;" name="" value="">Login</button>
                        <br />
                        <a href="@Url.Content("~/Users/ForgotPassword")">Forgot your Password? Click here!</a> 
                        @*<a href="@Url.Content("~/Users/Register")">Don't have account?</a>*@
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-9 col-lg-9 hidden-xs hidden-sm" style="height: 100vh; overflow: hidden; padding-right: 0;">
        <img src="~/assets/images/login-bg-2.png" class="img-responsive pull-right" style="width: 100%;">
    </div>
</div>
@section Scripts{
    <script type="text/javascript" src="~/assets/plugins/jquery-2.2.4.min.js"></script>
    <script type="text/javascript" src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript">
        $('#RememberMe').click(function () {
            var isChecked = $(this).is(':checked');
            if (isChecked) {
                $('#hdnRememberMe').val('true');
            } else {
                $('#hdnRememberMe').val('false');
            }
        });
    </script>
}