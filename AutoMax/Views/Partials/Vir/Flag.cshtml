@model AutoMax.Models.VirMainViewModel
@using AutoMax.Common.Enums;
@{
    var userName = ComonMethods.GetUserName(User.Identity.Name);
    var userRole = User.Identity.Name.GetUserRole();
}

<div id="menu3" class="tab-pane fade margin-none clsOptionFlag">
    <div class="panel panel-default border-top-none">
        <div class="panel-body view-height-250 custom-panel-padding">
            <p class="alert alert-success" id="flagSuccess" style="display:none;">test</p>
            <p class="alert alert-danger" id="flagError" style="display:none;">test</p>
            <form action="" method="" id="flag">
                <div class="row">
                    <div class="col-md-3 col-lg-3">
                        @foreach (var item in Model.Vir.Flag.Skip(0).Take(12))
                        {
                            <div class="checkbox custom-checkbox"><label><input type="checkbox" name="" id="@item.Id" @(@item.Checked ? "checked" : "")>@item.Name@item.Checked</label></div>


                        }
                    </div>
                    <div class="col-md-3 col-lg-3">
                        @foreach (var item in Model.Vir.Flag.Skip(12).Take(11))
                        {
                            <div class="checkbox custom-checkbox"><label><input type="checkbox" name="" id="@item.Id" @(@item.Checked ? "checked" : "")>@item.Name@item.Checked</label></div>


                        }
                    </div>
                    <div class="col-md-3 col-lg-3">
                        @foreach (var item in Model.Vir.Flag.Skip(22).Take(35))
                        {
                            <div class="checkbox custom-checkbox"><label><input type="checkbox" name="" id="@item.Id" @(@item.Checked ? "checked" : "")>@item.Name@item.Checked</label></div>


                        }
                    </div>
                    <div class="col-md-3 col-lg-3">
                        <div class="form-group custom-group">
                            <label for="more_info">Add More Information</label>
                            <textarea class="form-control custom-control" id="more_info" rows="15" name="">@Model.Vir.FlagMoreOption</textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="m-bottom-20">
            <div class="row">
                <div class="col-md-offset-4 col-lg-offset-4 col-md-4 col-lg-4">
                    <button class="btn btn-block btn-custom" name="" value="" onclick="SaveFlagOption()">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        var isFinanceUser = '@(userRole == UserRolesConst.Finance ? "true" : "false")';
        if (isFinanceUser == 'true')
        {
            $(".clsOptionFlag input,select,checbox,a,choose").each(function () { $(this).attr('disabled', true); });
            console.log('Finance User');
        }

       
    });
</script>


