@model AutoMax.Models.Entities.VehicleType
@{
    ViewBag.Title = "Vehicle Type";
}
<h3 class="main-header">Edit Vehicle Type</h3>
<div class="panel panel-default main-panel" style="margin-top:36px;">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(model => model.VehicleTypeID)
            @Html.HiddenFor(model => model.CreatedDate)
            @Html.HiddenFor(model => model.CreatedBy)
            @Html.HiddenFor(model => model.UpdatedBy)
            @Html.AntiForgeryToken()
            <div class="form-horizontal" style="width:100%; margin:0 auto">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                
                <div class="col-md-4 col-lg-4">
                    <div class="form-group custom-group">
                        <label for="s_num">Vehicle Type</label>
                        <input type="text" class="form-control custom-control" id="s_num" name="Type" value="@Model.Type" required>
                    </div>
                </div>
                <div class="col-md-4 col-lg-4">
                    <div class="form-group custom-group">
                        <label for="s_num">Arabic Sub Model</label>
                        <input type="text" class="form-control custom-control" id="s_num" name="ArabicType" value="@Model.ArabicType" required>
                    </div>
                </div>
            </div>
            <div class="row" style="clear:both;">
                <div class="form-group custom-group">
                    <div class="col-md-1">
                        <input type="submit" value="Save" class="btn btn-block btn-submit btn-custom" />
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-block backToList " })
                    </div>
                </div>
            </div>
        }
    </div>
</div>